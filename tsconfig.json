{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/app/page.jsx",
    "src/components/add/Add.jsx",
    "src/components/transactions/Transactions.jsx",
    "src/components/portfolio/charts/pieCartBox/PieChartBox.jsx",
    "src/components/dataTable/DataTable.jsx",
    "src/app/agent/[agentId]/page.jsx",
    "src/components/portfolio/portfolioTable/PortfolioTable.jsx"
  ],
  "exclude": ["node_modules"]
}
